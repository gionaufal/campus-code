<p class='alert'><%= flash[:alert] %></p>
<%= form_for(@card) do |f| %>
  <div>
    <%= f.label :front, 'Português', class: 'label'%>
    <%= f.text_field :front, class: 'field'%>
  </div>
  <br>
  <div>
    <%= f.label :back, 'Inglês', class: 'label'%>
    <%= f.text_field :back, class: 'field' %>
  </div>
  <br>
  <div>
    <%= f.label :author, 'Autor', class: 'label'%>
    <%= f.text_field :author, class: 'field' %>
  </div>
  <div class='published'>
    <%= f.label :published, 'Publicado', class: 'label'%>
    <%= f.check_box :published %>
  </div>
  <br>
  <%= f.submit 'Enviar', class:'submit'%>
<% end %>
