<p class='alert'><%= flash[:alert] %></p>
<%= form_for(@card) do |f| %>
  <div>
    <%= f.label :front, 'Português', class: 'label'%>
    <%= f.text_field :front %>
  </div>
  <br>
  <div>
    <%= f.label :back, 'Inglês', class: 'label'%>
    <%= f.text_field :back %>
  </div>
  <br>
  <div>
    <%= f.label :author, 'Autor', class: 'label'%>
    <%= f.text_field :author %>
  </div>
  <br>
  <%= f.submit 'Enviar', class:'submit'%>
<% end %>
